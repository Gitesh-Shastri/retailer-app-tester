<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileNew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/rel1"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:id="@+id/image"
                android:layout_height="50dp"
                android:src="@drawable/ic_man"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/card"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Details"
                    android:textStyle="bold"
                    android:id="@+id/general"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#101010"
                    />

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_below="@id/general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">


                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:id="@+id/first">

                        <android.support.design.widget.TextInputEditText
                            android:inputType="text"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gitesh"
                            android:hint="First Name"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/second">

                        <android.support.design.widget.TextInputEditText
                            android:inputType="text"
                            android:textSize="14sp"
                            android:text="Shastri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear1">

                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/drug_tv"
                        android:text="Drug License Number : "
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3764e7h"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:id="@+id/linear3"
                    android:layout_below="@id/linear2">

                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:text="GST Number : "
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3764e7h"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@id/linear3">

                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:text="PAN Number : "
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3764e7h"
                        />

                </LinearLayout>

            </RelativeLayout>

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            android:layout_below="@id/card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact/Login Details"
                    android:textStyle="bold"
                    android:id="@+id/contact"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#101010"
                    />

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_below="@id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">


                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:id="@+id/username">

                        <android.support.design.widget.TextInputEditText
                            android:inputType="text"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gitesh96"
                            android:hint="Username"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/number">

                        <android.support.design.widget.TextInputEditText
                            android:inputType="phone"
                            android:textSize="14sp"
                            android:text="9911806266"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/linear4"
                    android:layout_marginRight="10dp"
                    android:id="@+id/email">

                    <android.support.design.widget.TextInputEditText
                        android:inputType="text"
                        android:textSize="14sp"
                        android:text="giteshshastri96@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email ID"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/email"
                    android:layout_marginRight="10dp"
                    android:id="@+id/address">

                    <android.support.design.widget.TextInputEditText
                        android:inputType="textPostalAddress"
                        android:textSize="14sp"
                        android:text="16/386 Medicento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:layout_below="@id/address"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="#000"
                        android:layout_below="@id/address"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textColor="#000"
                        android:layout_below="@id/address"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:textColor="#000"
                        android:layout_below="@id/address"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="9"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/linear5"
                    >

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        />


                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:textColor="#000"
                        android:layout_below="@id/address"
                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:textColor="#000"
                        android:layout_below="@id/address"
                        />

                </LinearLayout>


            </RelativeLayout>

        </android.support.design.card.MaterialCardView>

    </RelativeLayout>

</ScrollView>