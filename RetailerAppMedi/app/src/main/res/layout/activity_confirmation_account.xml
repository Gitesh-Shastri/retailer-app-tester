<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmationAccountActivity">

    <LinearLayout
        android:id="@+id/congrats"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/congrats"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textStyle="bold"
            android:textColor="#555555"
            android:textSize="24sp"
            />

        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your account has been sucessfully \ncreated with Medicento"
            android:textColor="#555555"
            android:textSize="16sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/congrats"
        android:layout_above="@id/sign_in_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/opensanssemi"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please find your Login Credential"
                android:textColor="#555555"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_person"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/pharma_code"
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/your_pharma_code"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_number"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/your_registered_mobile_no_nemail_id_xxxx"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/sign_in_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_green"
        android:text="Continue"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>