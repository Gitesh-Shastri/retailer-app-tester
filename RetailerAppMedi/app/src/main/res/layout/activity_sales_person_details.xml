<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SalesPersonDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/official_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_new"
            android:id="@+id/image"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/image"
            android:text="Medicento Test"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            />

    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_marginTop="120dp"
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:cardElevation="8dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Orders"
                    android:id="@+id/total_order_tv"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/official_color"
                    android:textStyle="bold"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sales"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    />


                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/total_sales"
                    android:drawableLeft="@drawable/ic_rupee_indian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/official_color"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginTop="30dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_width="match_parent"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="textEmailAddress"
                />

        <EditText
            android:id="@+id/owner"
            android:drawableLeft="@drawable/ic_person_blue_24dp"
            android:layout_width="match_parent"
            android:drawablePadding="15dp"
            android:inputType="text"
            android:textSize="13sp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:hint="Owner Name"
            />

            <EditText
                android:id="@+id/contact"
                android:textSize="13sp"
                android:maxLines="1"
                android:inputType="phone"
                android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                android:layout_width="match_parent"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:hint="Contact No"
                />

            <EditText
                android:id="@+id/address"
                android:textSize="13sp"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_width="match_parent"
                android:drawablePadding="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:hint="Address"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Details"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/official_color"
        android:paddingRight="50dp"
        android:drawableRight="@drawable/ic_border_color_black_24dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>